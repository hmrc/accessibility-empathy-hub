{
  "author": "Shabana Ali",
  "bugs": {
    "url": "https://github.com/hmrc/accessibility-empathy-hub/issues"
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
    "axe-core": "^3.4.1",
    "cheerio": "^1.0.0-rc.3",
    "eslint": "^6.8.0",
    "eslint-formatter-pretty": "^3.0.1",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-node": "^11.0.0",
    "fs-extra": "^8.1.0",
    "html-minifier": "^4.0.0",
    "html-validator": "^5.0.0",
    "html-validator-cli": "^7.0.0",
    "htmlhint": "^0.11.0",
    "http-server": "^0.12.1",
    "husky": "^4.2.1",
    "node-w3c-validator": "^1.6.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "pa11y": "^5.3.0",
    "pa11y-reporter-html": "^1.0.0",
    "playwright": "^0.9.21",
    "pre-commit": "^1.2.2",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "stylelint": "^13.0.0",
    "stylelint-a11y": "^1.2.2",
    "stylelint-color-format": "^1.0.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-prettier": "^1.1.2"
  },
  "description": "https://hmrc.github.io/accessibility-empathy-hub/",
  "engines": {
    "node": ">= 10.0.0"
  },
  "homepage": "https://github.com/hmrc/accessibility-empathy-hub#readme",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "license": "MIT",
  "main": "index.js",
  "name": "accessibility-empathy-hub",
  "nodemonConfig": {
    "delay": "2500",
    "ignore": [
      "./node_modules/*",
      "docs/*"
    ]
  },
  "pre-commit": [
    "precommit-msg",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hmrc/accessibility-empathy-hub.git"
  },
  "scripts": {
    "html": "node-w3c-validator -f html -i ./index.html",
    "lint": "run-s lint:html lint:css lint:js",
    "lint:css": "stylelint --fix './assets/**/*.css'",
    "lint:html": "htmlhint --config .htmlhintrc ./index.html",
    "lint:js": "eslint './assets/**/*.js'",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "start": "http-server -o ./ -p 1337",
    "test": "run-s html lint"
  },
  "version": "1.0.0"
}
